<h1>Index.html.erb</h1>
<%= @recipes.each do |recipe| %>
  <h2><%= link_to recipe.name, recipe_path(recipe.id) %></h2>
  <p>Published at <%=recipe.created_at.strftime('%b %d, %Y')  %></p>
  <p><%=truncate(recipe.description, length: 200, omission: "... "){ link_to "Read More", recipe_path(recipe.id) } %></p>
<% end %>
