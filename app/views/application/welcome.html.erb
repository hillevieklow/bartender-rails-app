<!DOCTYPE html>
<html>
  <div class="container-fluid outlined-section">
    <h1 class="text-center">Welcome to <b>Bartender</b></h1>
    <br>
      <%= form_tag login_path do %>
          <div class="row text-center">
            <%= label_tag :email %>
            <%= email_field_tag :email, @user.email %>

            <%= label_tag :password %>
            <%= password_field_tag :password, @user.password %>
          </div>
          <br>
          <div class="row text-center">
            <input type=submit value='Login' class="btn btn-primary btn-lg">
          </div>
          <br>
      <% end %>
      <div class="text-center">
        <br>
        <p><%= link_to "Log in with Google", "/auth/google_oauth2" %></p>
        <p>Not registered? <%= link_to "Sign Up", new_user_path %></p>
      </div>
  </div>
</html>
