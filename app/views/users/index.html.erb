<h1><%= @user.name %>'s Recipes </h1>
<% @user.recipes.each do |recipe| %>
  <h2><%= link_to recipe.name, recipe_path(recipe.id) %></h2>
  <p><b>Upvotes: <%= recipe.upvotes %></b></p>
  <p>Published at <%=recipe.created_at.strftime('%b %d, %Y')  %></p>
  <p><%=truncate(recipe.description, length: 100, omission: "... "){ link_to "Read More", recipe_path(recipe.id) } %></p>
<% end %>
</div>
